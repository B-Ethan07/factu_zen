{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Modifier la Facture
{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                <h3 class="mb-0">
                    <i class="fas fa-file-invoice me-2"></i>Modification de la facture
                </h3>
            </div>

            <div class="card-body p-4">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="card h-100 bg-light">
                            <div class="card-body">
                                <h5 class="card-title mb-3">
                                    <i class="fas fa-hashtag me-2"></i>Informations de la facture
                                </h5>
                                <div class="mb-3">
                                    {{ form_label(form.reference, 'Référence', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                    {{ form_widget(form.reference, {
                                        'attr': {
                                            'class': 'form-control form-control-lg',
                                            'placeholder': 'FACT-2025-001'
                                        }
                                    }) }}
                                    <div class="form-text text-muted">
                                        <i class="fas fa-info-circle me-1"></i>Format recommandé : FACT-ANNÉE-NUMÉRO
                                    </div>
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.issuedAt, 'Date d\'émission', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                    {{ form_widget(form.issuedAt, {
                                        'attr': {
                                            'class': 'form-control datepicker',
                                            'data-toggle': 'datepicker'
                                        }
                                    }) }}
                                    <div class="form-text text-muted">
                                        <i class="fas fa-calendar-alt me-1"></i>Date d'émission de la facture
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card h-100 bg-light">
                            <div class="card-body">
                                <h5 class="card-title mb-3">
                                    <i class="fas fa-cog me-2"></i>Paramètres de la facture
                                </h5>
                                <div class="mb-3">
                                    {{ form_label(form.status, 'Statut', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                    {{ form_widget(form.status, {
                                        'attr': {
                                            'class': 'form-select'
                                        }
                                    }) }}
                                    <div class="form-text text-muted">
                                        <i class="fas fa-info-circle me-1"></i>Statut actuel de la facture
                                    </div>
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.client, 'Client', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                    {{ form_widget(form.client, {
                                        'attr': {
                                            'class': 'form-select'
                                        }
                                    }) }}
                                    <div class="form-text text-muted">
                                        <i class="fas fa-user me-1"></i>Client associé à la facture
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                    <a href="{{ path('invoice_show', {'id': invoice.id}) }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Retour à la facture
                    </a>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save me-1"></i>{{ button_label|default('Mettre à jour') }}
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
