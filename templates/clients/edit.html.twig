{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Modifier le Client
{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-building me-2"></i>Modification du client</h3>
            </div>

            <div class="card-body p-4">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="card h-100 bg-light">
                            <div class="card-body">
                                <h5 class="card-title mb-3">Informations de l'entreprise</h5>
                                <div class="mb-3">
                                    {{ form_label(form.companyName, 'Nom de l\'entreprise', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                    {{ form_widget(form.companyName, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                    {{ form_help(form.companyName) }}
                                    <div class="form-text text-muted">
                                        <i class="fas fa-info-circle me-1"></i>Nom légal complet de l'entreprise
                                    </div>
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.contactName, 'Personne de contact', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                    {{ form_widget(form.contactName, {'attr': {'class': 'form-control'}}) }}
                                    <div class="form-text text-muted">
                                        <i class="fas fa-user me-1"></i>Nom du responsable ou contact principal
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card h-100 bg-light">
                            <div class="card-body">
                                <h5 class="card-title mb-3">Coordonnées</h5>
                                <div class="mb-3">
                                    {{ form_label(form.email, 'Adresse email', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                    <div class="form-text text-muted">
                                        <i class="fas fa-envelope me-1"></i>Email professionnel principal
                                    </div>
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.phone, 'Téléphone', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                    {{ form_widget(form.phone, {'attr': {'class': 'form-control', 'pattern': '^(?:(?:\+|00)33|0)\s*[1-9](?:[\s.-]*\d{2}){4}$'}}) }}
                                    <div class="form-text text-muted">
                                        <i class="fas fa-phone me-1"></i>Format: +33 (0)X XX XX XX XX
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                    <a href="{{ path('client_show', {'id': client.id}) }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Retour
                    </a>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save me-1"></i>Mettre à jour
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

