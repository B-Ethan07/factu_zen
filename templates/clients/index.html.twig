{% extends 'base.html.twig' %}

{% block title %}
  {{ parent()}} Accueil
{% endblock %}

{% block body %}

<nav class="navbar navbar-dark bg-dark">
  <div class="container-fluid">
    <form class="d-flex" method="get" action="{{ path('client_search') }}">
        <input class="form-control me-2" name="name" type="search" placeholder="Nom de la compagnie" aria-label="Search" value="{{ app.request.get('name') }}" />
        <button class="btn btn-outline-warning" type="submit">Rechercher</button>
    </form>
  </div>
</nav>
<section class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Liste des Clients</h2>
        </div>
        <div class="card-body">

            {% if clients is empty %}
                <p class="text-muted">Aucun client trouvé.</p>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-striped table-bordered align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Contact</th>
                                <th>Entreprise</th>
                                <th>Email</th>
                                <th>Téléphone</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for client in clients %}
                                <tr>
                                    <td>{{ client.contactName }}</td>
                                    <td>{{ client.companyName }}</td>
                                    <td>{{ client.email }}</td>
                                    <td>{{ client.phone ?: '—' }}</td>
                                    <td>
                                        <a href="{{ path('client_show', {'id': client.id}) }}" class="btn btn-sm btn-outline-primary">
                                            Détails
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}

        </div>
    </div>
</section>

{% endblock %}
